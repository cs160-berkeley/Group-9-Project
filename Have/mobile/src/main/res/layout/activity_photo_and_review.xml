<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/onboard3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Next"
        android:id="@+id/submitButton"
        android:layout_marginStart="67dp"
        android:visibility="visible"
        android:textColor="@android:color/transparent"
        android:background="@android:color/transparent"
        android:layout_below="@+id/newPhotoButton"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Next"
        android:id="@+id/backButton"
        android:visibility="visible"
        android:layout_alignTop="@+id/submitButton"
        android:layout_toEndOf="@+id/submitButton"
        android:textColor="@android:color/transparent"
        android:background="@android:color/transparent" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newPhotoButton"
        android:layout_marginStart="30dp"
        android:background="@drawable/new_photo"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/backButton"
        android:visibility="visible"
        android:alpha="0" />

</RelativeLayout>